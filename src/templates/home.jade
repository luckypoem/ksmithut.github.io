doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='ksmithut\'s personal web log filled with programming tutorials and learnings.')
    title ksmithut
    link(rel='stylesheet', href=cssPath)
    link(rel='author', href='https://plus.google.com/+KeithSmithUT')
    link(rel='canonical', href=base)
  body
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-55365100-1', 'auto');
      ga('send', 'pageview');

    .navbar.navbar-inverse(role='navigation'): .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle Navigation
          each iconBar in [0, 1, 2]
            span.icon-bar
        a.navbar-brand(href='/') ksmithut
      .navbar-collapse.collapse
        nav: ul.nav.navbar-nav
          li: a(href=collections.content.main.posts.path) Blog

    .jumbotron
      .container
        h1 Hi. I'm Keith.
        p This is the place where I log my rants, the stuff I learn, and the things I experience.

    section.container
      div.sidebar-section
        h3 Most Recent Posts
        .list-group
          - n = 0, maxPosts = 5
          while n < maxPosts
            - post = collections.content.items.posts[n]
            if post
              a.list-group-item(href=post.path)
                h4= post.title
                p= post.description
            - n++

    .footer.inverse
      .container
        - year = new Date().getFullYear()
        p &copy; Keith Smith #{year}

    script(src=jsPath)
