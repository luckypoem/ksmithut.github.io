doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content=description)
    title #{title} | Page #{index + 1} | ksmithut
    link(rel='stylesheet', href=cssPath)
    link(rel='author', href='https://plus.google.com/+KeithSmithUT')
    link(rel='canonical', href=base + path)
  body
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-55543605-1', 'auto');
      ga('require', 'displayfeatures');
      ga('send', 'pageview');

    .navbar.navbar-inverse(role='navigation'): .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle Navigation
          each iconBar in [0, 1, 2]
            span.icon-bar
        a.navbar-brand(href='/') ksmithut
      .navbar-collapse.collapse
        nav: ul.nav.navbar-nav
          li: a(href=collections.content.main.posts.path) Blog

    section.container
      h1 #{title} (Page #{index + 1})
      .list-group
        each item in items
          a.list-group-item(href=item.path)
            h4= item.title
              | &nbsp;
              span.label.label-default #{item.date.getDate()}/#{item.date.getMonth() + 1}/#{item.date.getFullYear()}
            p= item.description

    .footer.inverse
      .container
        - year = new Date().getFullYear()
        p &copy; Keith Smith #{year}

    script(src=jsPath)
